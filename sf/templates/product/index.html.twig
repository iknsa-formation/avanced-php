{% extends 'base.html.twig' %}

{% block body %}

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Afficher</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
    {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>
                <a class="btn btn-info" href="/product/{{ product.id }}">
                    Show
                </a>
                <a class="btn btn-warning" href="/product/edit/{{ product.id }}">
                    Modifier
                </a>
                <a class="btn btn-danger" href="/product/delete/{{ product.id }}">
                    Delete
                </a>
            </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
